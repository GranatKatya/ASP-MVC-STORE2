@model WebStoreDomain.Entities.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>Product detail</h1>
<div>
    <h2>@Model.Name</h2>
    <p>Price:@Model.Price </p>
    @*<p>Description:</b> @Model.Description</p>*@

    <div>
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)
    </div>



    <p>Category:    @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categ as SelectList)</p>
</div>

