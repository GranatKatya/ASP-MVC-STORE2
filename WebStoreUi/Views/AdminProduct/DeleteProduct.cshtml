            <dd>
                @Html.DisplayFor(model => model.Src)
            </dd>*@

            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd>
                @Html.DropDownListFor(model => model.Category, ViewBag.Categ as SelectList)
                @* @Html.DisplayFor(ViewBag.Categ as SelectList)*@
            </dd>
            <dt></dt>
            <dd>             
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color"  style="margin-top: 10px; margin-left: 10px;">
                        <input type="submit" value="Delete" class="btn btn-default" />

                    </div>
                }
        </dd>
        </dl>
      
    </div>
</div>

<footer style="clear: both;  ">
    <div style="width: 100%;  margin-left: 11%;">

